<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

    <section>
      <h1>We love video games here!</h1>
      <% if (user) { %>
        <h2>What are you playing today? Add your game here:</h2>
        <form action="/games" method="POST">
          <div class="form-group">
            <label for="title-input">Title:</label>
            <input type="text" name="title" id="title-input">
          </div>
          <div class="form-group">
            <label for="platform-input">Platform:</label>
            <input type="text" name="platform" id="platform-input">
          </div>
          <div class="form-group">
            <label for="completion-status-select">Status:</label>
            <select name="completion-status" id="completion-status-select">
              <option value="Complete">Complete</option>
              <option value="Incomplete">Incomplete</option>
              <option value="In-progress">In progress</option>
            </select>
          </div>
          <button type="submit">Add üïπÔ∏è</button>
        </form>
        <% } %>
    </section>
    <section>
      <h2>Full list of video games ever existed</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Platform</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Developer</th>
          </tr>
        </thead>
        <tbody>
          <% games.forEach(game=> { %>
            <tr>
              <td>
                <%= game.title %>
              </td>
              <td>
                <%= game.platform %>
              </td>
              <td>
                <%= game.releaseYear %>
              </td>
              <td>
                <%= game.genre %>
              </td>
              <td>
                <%= game.developer %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </section>

    <%- include('../partials/footer') %>